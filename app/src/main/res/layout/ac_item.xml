<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/health_pic"
        android:layout_width="240sp"
        android:layout_height="240sp"
        android:src="@drawable/health"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/health_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fifaks"
        android:text="@string/health_50"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/health_pic"
        app:layout_constraintStart_toStartOf="@+id/health_pic"
        app:layout_constraintTop_toBottomOf="@+id/health_pic"/>

</androidx.constraintlayout.widget.ConstraintLayout>