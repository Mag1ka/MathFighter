<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bleech2"
    tools:context=".view.MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/logo_anim"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/hidle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30sp">
    </pl.droidsonroids.gif.GifImageView>

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/fifaks"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:reflectionColor="#E91E63"
        android:textColor="@color/test3"/>

    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/start_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="15sp"
        android:background="@drawable/round_but"
        android:fontFamily="@font/fifaks"
        android:padding="10sp"
        android:text="@string/start_game"
        app:reflectionColor="#E91E63"
        android:textColor="@color/test3"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/character_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="15sp"
        android:background="@drawable/round_but"
        android:fontFamily="@font/fifaks"
        android:padding="10sp"
        android:text="@string/character_button"
        app:reflectionColor="#E91E63"
        android:textColor="@color/test3"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_button" />

    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/shop_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="15sp"
        android:background="@drawable/round_but"
        android:fontFamily="@font/fifaks"
        android:padding="10sp"
        android:text="@string/shop_button"
        app:reflectionColor="#E91E63"
        android:textColor="@color/test3"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_button" />

    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/setting_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="15sp"
        android:background="@drawable/round_but"
        android:fontFamily="@font/fifaks"
        android:padding="10sp"
        android:text="@string/setting_button"
        app:reflectionColor="#E91E63"
        android:textColor="@color/test3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/achievement_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="15sp"
        android:background="@drawable/round_but"
        android:fontFamily="@font/fifaks"
        android:padding="10sp"
        android:text="@string/achievement_button"
        app:reflectionColor="#E91E63"
        android:textColor="@color/test3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_button" />

    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/leaderboards_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="15sp"
        android:background="@drawable/round_but"
        android:fontFamily="@font/fifaks"
        android:padding="10sp"
        android:text="@string/leaderboards_button"
        app:reflectionColor="#E91E63"
        android:textColor="@color/test3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_button" />




</androidx.constraintlayout.widget.ConstraintLayout>