<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Options"
    android:background="@drawable/bg_orange">
    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fifaks"
        android:text="@string/setting_button"
        android:textAlignment="center"
        android:textColor="#EA80FC"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:reflectionColor="#E91E63" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_sound"
        android:layout_width="300sp"
        android:layout_height="20sp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_check"
        android:valueFrom="0.0"
        android:valueTo="1.0"
        android:stepSize="0.05"
        app:labelBehavior="gone"
        app:tickVisible="false"
        android:focusable="true"
        android:contentDescription="@string/sound_volume"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_music"
        android:layout_width="300sp"
        android:layout_height="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music_check"
        android:valueFrom="0.0"
        android:valueTo="1.0"
        android:stepSize="0.05"
        app:labelBehavior="gone"
        app:tickVisible="false"
        android:contentDescription="@string/music_volume"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sound_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fifaks"
        android:paddingVertical="20sp"
        android:text="@string/sound_on_off"
        android:textColor="#EA80FC"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/music_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fifaks"
        android:paddingVertical="20sp"
        android:text="@string/music_on_off"
        android:textColor="#EA80FC"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_sound" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/oback"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent"
        android:contentDescription="@string/back_to_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>